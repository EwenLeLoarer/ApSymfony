</style>

<div class="row">
   <p>test</p>
{% for item in unAchat %}
<p>test</p> 

        <div class="col">  
        
            <p> {{item.id}} </p>
            <img src="{{article.imageUrl}}">
            {% if article.laPromotion != null %}
            <a>{{article.PrixArticle - (article.PrixArticle * (article.laPromotion.reduction / 100))|round(2,'ceil') }}€</a>
            {% endif %}
